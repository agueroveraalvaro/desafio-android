<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/colorWhite">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

        <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Titulo pull request"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorBlue"/>

        <TextView
                android:id="@+id/txtBody"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion Repositorio Descripcion Repositorio Descripcion Repositorio Descripcion"
                android:textSize="15sp"
                android:textColor="@color/colorBlack"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

            <ImageView
                    android:id="@+id/imgOwnerPullRequest"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp">

                <TextView
                        android:id="@+id/txtUsernamePullRequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="username"
                        android:gravity="center"
                        android:textColor="@color/colorBlue"
                        android:textSize="15sp"/>

                <TextView
                        android:id="@+id/txtTypePullRequest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nome sobrenombre"
                        android:gravity="center"
                        android:textSize="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
